{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<br><br>
<div class="container">
<h1>Stworz bezplatne konto</h1>

{{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
    <div class="form-group">
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="form-group">
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="form-group form-check">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">Zgadzam siÄ™ na warunki</label>
        {{ form_errors(registrationForm.agreeTerms) }}
    </div>

    <button type="submit" class="btn btn-primary">Zarejestruj sie</button>
{{ form_end(registrationForm) }}

<p style="margin-top: 20px">Masz juz konto? <a href="{{ path('app_login') }}">Zaloguj sie</a></p>

</div>
{% endblock %}
