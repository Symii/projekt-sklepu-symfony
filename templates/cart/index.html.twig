{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Twoj koszyk</h1>

        {% if items is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Nazwa</th>
                        <th scope="col">Ilosc</th>
                        <th scope="col">Cena jednostkowa</th>
                        <th scope="col">Lacznie</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.product.price }} zl</td>
                            <td>{{ item.product.price * item.quantity }} zl</td>
                            <td>
                                <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn btn-danger">Usun</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><strong>Razem: {{ total }} zl</strong><br><a href="{{ path('order_checkout') }}" class="btn btn-primary">Przejdź do składania zamówienia</a></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        {% else %}
            <p>Twoj koszyk jest pusty.</p>
        {% endif %}
    </div>
{% endblock %}